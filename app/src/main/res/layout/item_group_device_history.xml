<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:car_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.devicehistory.DeviceHistoryViewModel"/>
        <variable
            name="deviceHistory"
            type="com.framgia.fdms.data.model.DeviceUsingHistory"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_3"
        android:padding="@dimen/dp_3"
        car_view:cardCornerRadius="@dimen/dp_1"
        car_view:cardElevation="@dimen/dp_3"
        tools:cardCornerRadius="@dimen/dp_3">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:padding="@dimen/dp_10"
                android:text='@{deviceHistory.staffName}'
                android:textColor="@{viewModel.expanded ? @color/color_teal_500 : @color/color_dark_gray}"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:src="@{viewModel.expanded ? @drawable/ic_drop_up_arrow : @drawable/ic_drop_down_arrow}"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>