<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:car_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.devicehistory.DeviceHistoryViewModel"/>
        <variable
            name="device"
            type="com.framgia.fdms.data.model.Device"/>
        <import type="com.framgia.fdms.utils.Utils"/>
    </data>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:paddingLeft="@dimen/dp_20">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            car_view:cardCornerRadius="@dimen/dp_1"
            car_view:cardElevation="@dimen/dp_3"
            tools:cardCornerRadius="@dimen/dp_3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="@dimen/dp_5"
                    android:text='@{device.deviceCode}'
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="@dimen/dp_5"
                    android:text='@{device.deviceCategoryName}'
                    android:textSize="@dimen/sp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/dp_5"
                    android:text='@{Utils.getStringDate(device.boughtDate)}'
                    android:textSize="@dimen/sp_10"
                    android:textStyle="italic"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>