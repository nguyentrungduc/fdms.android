<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.producer.ProducerViewModel"
            />
        <variable
            name="producer"
            type="com.framgia.fdms.data.model.Producer"
            />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:onClick="@{()-> viewModel.onItemRecyclerViewClick(producer)}"
        app:cardCornerRadius="@dimen/dp_2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/layout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:visibility="gone"
                    android:layout_height="@dimen/dp_25"
                    android:layout_margin="@dimen/dp_5"
                    android:onClick="@{() -> viewModel.onEditProducerClick(producer)}"
                    app:srcCompat="@drawable/ic_edit"
                    tools:ignore="ContentDescription"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:visibility="gone"
                    android:layout_margin="@dimen/dp_5"
                    android:onClick="@{() -> viewModel.onDeleteProducerClick(producer)}"
                    app:srcCompat="@drawable/ic_x_button"
                    tools:ignore="ContentDescription"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/layout_button"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_10"
                    app:srcCompat="@drawable/ic_maker"
                    tools:ignore="ContentDescription,VectorDrawableCompat"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:text="@{producer.name}"
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@color/color_brown_100"
                        android:visibility="@{TextUtils.isEmpty(producer.description)? View.GONE : View.VISIBLE}"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{producer.description}"
                        android:textSize="@dimen/sp_12"
                        android:visibility="@{TextUtils.isEmpty(producer.description)? View.GONE : View.VISIBLE}"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
